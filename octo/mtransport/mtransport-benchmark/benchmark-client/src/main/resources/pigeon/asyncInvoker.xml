<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="echoService" class="com.dianping.pigeon.remoting.invoker.config.spring.ReferenceBean" init-method="init">
        <property name="url" value="com.sankuai.octo.benchmark.thrift.EchoService"/>
        <property name="interfaceName" value="com.sankuai.octo.benchmark.thrift.EchoService$Iface"/>
        <property name="timeout" value="1000"/>
        <property name="serialize" value="thrift"/>
        <property name="callType" value="callback"/>
        <property name="remoteAppKey" value="com.meituan.inf.rpc.benchmark" />
        <property name="callback" ref="serviceCallback" />
    </bean>

    <bean id="serviceCallback" class="com.sankuai.octo.benchmark.client.EchoServiceCallback" />
</beans>