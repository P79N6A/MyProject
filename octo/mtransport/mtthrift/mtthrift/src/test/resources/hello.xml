<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="serviceProcessor" class="com.meituan.service.mobile.mtthrift.HelloServiceImpl"></bean>

    <bean id="serverPublisher" class="com.meituan.service.mobile.mtthrift.proxy.ThriftServerPublisher" init-method="publish" destroy-method="destroy">
        <property name="serviceInterface" value="com.meituan.service.mobile.mtthrift.HelloService"/> <!-- 接口类 -->
        <property name="serviceImpl" ref="serviceProcessor"/> <!-- 实现类 -->
        <property name="appKey" value="com.sankuai.inf.mtthrift.testServer"/>  <!-- 本地 appkey，建议重新注册一个 -->
        <property name="port" value="10001"/> <!-- Server 监听端口 -->
    </bean>

    <bean id="clientProxy" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy" destroy-method="destroy">
        <property name="serviceInterface" value="com.meituan.service.mobile.mtthrift.HelloService"/>
        <property name="appKey" value="com.sankuai.inf.mtthrift.testClient"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mtthrift.testServer"/>
    </bean>

</beans>
