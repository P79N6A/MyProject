<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="clientProxy1" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy"
          destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.mtthrift.testClient"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.idlTest.Twitter"/>
        <property name="serverIpPorts" value="localhost:9009"/>
        <property name="timeout" value="5000"/>
        <property name="filters">
            <list>
                <bean class="com.sankuai.mtthrift.testSuite.filter.SpecificFilter"/>
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter2"/>
            </list>
        </property>
    </bean>

    <bean id="clientProxy2" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy"
          destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.mtthrift.testClient"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.idlTest.Twitter"/>
        <property name="serverIpPorts" value="localhost:9009"/>
        <property name="timeout" value="5000"/>
        <property name="filters">
            <list>
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter1"/>
            </list>
        </property>
    </bean>

    <bean id="clientProxy3" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy"
          destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.mtthrift.testClient"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.idl.TestService"/>
        <property name="remoteServerPort" value="9010"/>
        <property name="serverIpPorts" value="localhost:9010"/>
        <property name="timeout" value="5000"/>
        <property name="filters">
            <list>
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter1"/>
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter2"/>
            </list>
        </property>
    </bean>

    <bean id="annotationClientProxy" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy" destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.mtthrift.testClient"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.annotationTest.Twitter"/>
        <property name="serverIpPorts" value="localhost:9011"/>
        <property name="remoteUniProto" value="true"/>
        <property name="filters">
            <list>
                <bean class="com.sankuai.mtthrift.testSuite.filter.SpecificFilter"/>
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter2"/>
            </list>
        </property>
    </bean>

    <bean id="idlClientProxy" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy" destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.mtthrift.testClient"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.idlTest.Twitter"/>
        <property name="serverIpPorts" value="localhost:9011"/>
        <property name="remoteUniProto" value="true"/>
        <property name="filters">
            <list>
                <bean class="com.sankuai.mtthrift.testSuite.filter.SpecificFilter"/>
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter2"/>
            </list>
        </property>
    </bean>
</beans>