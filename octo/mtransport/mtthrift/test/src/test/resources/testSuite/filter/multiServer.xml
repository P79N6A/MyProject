<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="serverPublisher1" class="com.meituan.service.mobile.mtthrift.proxy.ThriftServerPublisher"
          init-method="publish" destroy-method="destroy">
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.idlTest.Twitter"/>
        <property name="serviceImpl" ref="serviceProcessor1"/>
        <property name="port" value="9009"/>
        <property name="appKey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="filters">
            <list>
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter1" />
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter2" />
            </list>
        </property>
        <property name="shutdownWaitTime" value="0"/>
    </bean>
    <bean id="serviceProcessor1" class="com.sankuai.mtthrift.testSuite.idlTest.TwitterImpl">
    </bean>

    <bean id="serverPublisher2" class="com.meituan.service.mobile.mtthrift.proxy.ThriftServerPublisher"
          init-method="publish" destroy-method="destroy">
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.idl.TestService"/>
        <property name="serviceImpl" ref="serviceProcessor2"/>
        <property name="port" value="9010"/>
        <property name="appKey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="filters">
            <list>
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter1" />
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter2" />
                <bean class="com.sankuai.mtthrift.testSuite.filter.SpecificFilter" />
            </list>
        </property>
        <property name="shutdownWaitTime" value="0"/>
    </bean>

    <bean id="serviceProcessor2" class="com.sankuai.mtthrift.testSuite.idl.TestServiceImpl">
    </bean>

    <bean id="serverPublisher3" class="com.meituan.service.mobile.mtthrift.proxy.ThriftServerPublisher"
          init-method="publish" destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="port" value="9011"/>
        <property name="serviceProcessorMap">
            <map>
                <entry key="com.sankuai.mtthrift.testSuite.idlTest.Twitter" value-ref="idlServiceProcessorBean"/>
                <entry key="com.sankuai.mtthrift.testSuite.annotationTest.Twitter" value-ref="annotationServiceProcessorBean"/>
            </map>
        </property>
        <property name="filters">
            <list>
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter1" />
                <bean class="com.sankuai.mtthrift.testSuite.filter.CustomFilter2" />
            </list>
        </property>
        <property name="shutdownWaitTime" value="0"/>
    </bean>

    <!-- 单端口多服务基础配置 -->
    <bean id="idlServiceProcessorBean" class="com.meituan.service.mobile.mtthrift.proxy.ThriftServiceBean">
        <property name="serviceImpl">
            <bean class="com.sankuai.mtthrift.testSuite.idlTest.TwitterImpl" />
        </property>
    </bean>

    <bean id="annotationServiceProcessorBean" class="com.meituan.service.mobile.mtthrift.proxy.ThriftServiceBean">
        <property name="serviceImpl">
            <bean class="com.sankuai.mtthrift.testSuite.annotationTest.TwitterImpl" />
        </property>
    </bean>
</beans>