<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="clientProxy" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy" destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.mtthrift.testClient"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.idlTest.Twitter"/>
        <property name="remoteServerPort" value="9114"/>
        <property name="timeout" value="5000"/>
    </bean>

    <bean id="asyncClientProxy" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy" destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.mtthrift.testClient"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.idlTest.Twitter"/>
        <property name="remoteServerPort" value="9114"/>
        <property name="timeout" value="5000"/>
        <property name="async" value="true" />
    </bean>

    <bean id="nettyClientProxy" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy" destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.mtthrift.testClient"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.idlTest.Twitter"/>
        <property name="remoteServerPort" value="9114"/>
        <property name="timeout" value="5000"/>
        <property name="nettyIO" value="true" />
    </bean>

    <bean id="asyncNettyClientProxy" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy" destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.mtthrift.testClient"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mtthrift.testServer"/>
        <property name="serviceInterface" value="com.sankuai.mtthrift.testSuite.idlTest.Twitter"/>
        <property name="remoteServerPort" value="9114"/>
        <property name="timeout" value="5000"/>
        <property name="nettyIO" value="true" />
        <property name="async" value="true" />
    </bean>

</beans>
