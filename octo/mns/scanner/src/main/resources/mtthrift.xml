<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mnsCacheClientProxy" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy" destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.octo.scannermaster"/>
        <property name="remoteAppkey" value="com.sankuai.inf.mnsc"/>
        <property name="serviceInterface" value="com.sankuai.octo.mnsc.idl.thrift.service.MNSCacheService"/>
        <property name="timeout" value="100" />
    </bean>
    <bean id="mnsCacheClient" class="com.sankuai.octo.scanner.service.MNSCacheClient">
        <property name="clientProxy" ref="mnsCacheClientProxy"/>
    </bean>


    <bean id="updaterClientProxy" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy" destroy-method="destroy">
        <property name="appKey" value="com.sankuai.inf.octo.scannermaster"/>
        <property name="remoteAppkey" value="com.sankuai.inf.octo.scannerdetector"/>
        <property name="serviceInterface" value="com.sankuai.octo.service.DetectorService"/>
        <property name="async" value="true"/>
        <property name="timeout" value="400" />
    </bean>
    <bean id="updaterClient" class="com.sankuai.octo.scanner.service.DetectorServiceClient">
        <property name="clientProxy" ref="updaterClientProxy"/>
    </bean>


    <bean id="serviceProcessor" class="com.sankuai.octo.scanner.mtthrift.HeartbeatServiceImpl"></bean>
    <bean id="serverPublisher" class="com.meituan.service.mobile.mtthrift.proxy.ThriftServerPublisher" init-method="publish" destroy-method="destroy">
        <property name="serviceInterface" value="com.sankuai.octo.scanner.mtthrift.HeartbeatService"/> <!-- 接口类 -->
        <property name="serviceImpl" ref="serviceProcessor"/> <!-- 实现类 -->
        <property name="appKey" value="com.sankuai.inf.octo.scannermaster"/>  <!-- 本地appkey -->
        <property name="port" value="9001"/> <!-- 监听端口 -->
    </bean>

</beans>
