<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss.SSS} %t [%p] %c{1} (%F:%L) %msg%n"/>
        </Console>

        <!--异步磁盘appender，默认按天&按512M文件大小切分日志，默认最多保留30个日志文件，默认为非阻塞模式-->
        <XMDFile name="XMDFileAppender" fileName="com.sankuai.inf.octo.mccbanma.log">
        </XMDFile>
        <XMDFile name="JmonitorAppender" fileName="com.sankuai.inf.octo.mccbanma.jmonitor.log">
        </XMDFile>

        <!--ERROR日志、WARN日志单独输出到一个文件-->
        <XMDFile name="ERROR-LOG" fileName="error.log">
            <Filters>
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </XMDFile>

        <XMDFile name="XMDFileAppenderHttpIP" fileName="com.sankuai.inf.octo.mccbanma.http.accesslog" rolloverMax="5" sizeBasedTriggeringSize="64M">
        </XMDFile>

        <XMDFile name="XMDFileAppenderThriftIP" fileName="com.sankuai.inf.octo.mccbanma.thrift.accesslog" rolloverMax="5" sizeBasedTriggeringSize="64M">
        </XMDFile>

        <!--异常日志远程上报-->
        <Async name="AsyncErrorLog" blocking="false">  <!-- 当 blocking 为 false 时，超过最高 qps 时，不阻塞，直接抛弃数据。-->
            <AppenderRef ref="remoteErrorLog"/>
        </Async>
        <Scribe name="remoteErrorLog">
            <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
            <LcLayout/>
        </Scribe>

    </appenders>

    <loggers>
        <logger name ="com.sankuai.meituan.config.interceptorfilter.HttpAccessLogInterceptor" level="info" additivity="true">
            <appender-ref ref="XMDFileAppenderHttpIP"/>
        </logger>

        <logger name ="com.sankuai.meituan.config.interceptorfilter.ThriftAccessLogFilter" level="info" additivity="true">
            <appender-ref ref="XMDFileAppenderThriftIP"/>
        </logger>

        <logger name="org.springframework" level="info" additivity="true">
            <appender-ref ref="XMDFileAppender"/>
        </logger>

        <logger name="jmonitor" additivity="false">
            <appender-ref ref="JmonitorAppender"/>
        </logger>
        <logger name="jmonitorlogstore" additivity="false">
            <appender-ref ref="JmonitorAppender"/>
        </logger>

        <logger name=" org.apache.logging.log4j" level="fatal" additivity="true">
            <appender-ref ref="XMDFileAppender"/>
        </logger>

        <!-- Root Logger -->
        <root level="info">
            <appender-ref ref="Console"/>
            <appender-ref ref="JmonitorAppender"/>
            <appender-ref ref="ERROR-LOG"/>
            <appender-ref ref="XMDFileAppender"/>
            <appender-ref ref="AsyncErrorLog" />      <!--异常日志上报要添加到root-->
        </root>
    </loggers>
</configuration>