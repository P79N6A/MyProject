<?xml version="1.0" encoding="UTF-8"?>
<CRAgentConf>
    <!-- cr_agent版本号 -->
    <CRAgentVersion>cr_agent-v1.1.1</CRAgentVersion>
    <!-- cr_agent端口 -->
    <ClientPort>5297</ClientPort>  
    <CraneServerPort>8383</CraneServerPort>
    <!-- Server连接超时 -->
    <Timeout>100</Timeout>
    <!-- 监视线程调度时间-->
    <MonitorTimeOut>60</MonitorTimeOut>
    <!-- server连接重试次数 -->
    <Retry>3</Retry>
		<!--最大的服务队列长度> -->
		<MaxTaskNum>20</MaxTaskNum>
		<!--资源清理监控时间> -->
		<MaxWaitTime>900</MaxWaitTime>
		<!-- service type-->
    <Command>yes</Command>
    <Deployment>no</Deployment>
    <LogCenter>no</LogCenter>
		<MaxThreadNum>20</MaxThreadNum>
		<MaxAliveTime>1800</MaxAliveTime>	
		<LogConfigPath>/opt/meituan/apps/cr_agent/log4cplus.conf</LogConfigPath>
		<AgentConfigPath>/opt/meituan/apps/cr_agent/crang_agent.xml</AgentConfigPath>
</CRAgentConf>
