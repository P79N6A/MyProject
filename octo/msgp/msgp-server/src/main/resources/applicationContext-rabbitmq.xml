<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="rabbitCustomConfigurer"
          class="com.sankuai.octo.msgp.utils.CustomizedPropertyConfigurer">
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
        <property name="order" value="10000"/>
    </bean>

    <bean id="rabbitConnectionFactory"
          class="org.springframework.amqp.rabbit.connection.CachingConnectionFactory"
          p:username="${rabbitmq.user}" p:password="${rabbitmq.password}"
          p:addresses="${rabbitmq.cluster}" p:virtualHost="${rabbitmq.vhost}">
    </bean>

    <bean id="jsonMessageConverter"
          class="org.springframework.amqp.support.converter.JsonMessageConverter"/>

    <bean id="amqpTemplate" class="org.springframework.amqp.rabbit.core.RabbitTemplate"
          p:connectionFactory-ref="rabbitConnectionFactory"
          p:channelTransacted="${rabbitmq.transacted}"
          p:messageConverter-ref="jsonMessageConverter"/>


</beans>