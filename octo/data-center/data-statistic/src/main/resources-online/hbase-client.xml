    <property>
        <name>hbase.client.read.threads.max</name>
        <value>1</value>
    </property>
    <property>
        <name>hbase.client.write.threads.max</name>
        <value>64</value>
    </property>
    <property>
        <name>hbase.client.max.perserver.tasks</name>
        <value>128</value>
