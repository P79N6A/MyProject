<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.sankuai.octo"/>

    <bean id="booter" class="com.sankuai.octo.query.bootstrap" init-method="init"/>

    <bean id="mnsInvokerBean" class="com.sankuai.inf.octo.mns.MnsInvoker"/>
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject" ref="mnsInvokerBean"/>
        <property name="targetMethod">
            <value>registerHttpService</value>
        </property>
        <property name="arguments">
            <list>
                <value>com.sankuai.inf.data.query</value>
                <value>8960</value>
            </list>
        </property>
    </bean>
</beans>
