<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="logStatisticService" class="com.meituan.service.mobile.mtthrift.proxy.ThriftClientProxy"
          destroy-method="destroy">
        <property name="serviceInterface" value="com.sankuai.octo.statistic.service.LogStatisticService"/>
        <property name="timeout" value="3000"/>
        <property name="appKey" value="com.sankuai.octo.client"/>
        <property name="remoteAppkey" value="com.sankuai.inf.data.statistic"/>
        <property name="clusterManager" value="OCTO"/>
    </bean>

</beans>
